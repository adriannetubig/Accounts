
@{
    ViewBag.Title = "Index";
}

<div ng-controller="RoleController as model" ng-init="model.Initialise()">
    <div class="row">
        <div class="col-sm-4">
            <a href="../Role/Create" class="btn btn-default">Create</a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-hover table-sm table-bordered">
                <thead>
                    <tr class="thead-inverse">
                        <th class="text-center">Role</th>
                        <th class="text-center">Description</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="clickableRow text-center" ng-repeat="role in model.Roles" ng-click="$event.originalEvent.dropdown || model.GoToUpdatePage(role.RoleId)" ng-init="model.UpdateRole(role)">
                        <td>
                            <span ng-bind="role.Name"></span>
                        </td>

                        <td>
                            <span id="ac" ng-bind="role.Description"></span>
                        </td>

                        <td class="text-center" ng-click="$event.originalEvent.dropdown = true">
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#" ng-click="model.GoToUpdatePage(role.RoleId)">Edit</a></li>
                                    <li><a href="#" ng-click="model.Delete(role.RoleId)">Delete</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>